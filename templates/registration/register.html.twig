{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}
{% block stylesheets %}
    <link href = "{{ asset('styles/register.css') }}" rel = "stylesheet">
{% endblock %}

{% block body %}
    <section class="h-100 gradient-form" style="background-color: #eee;">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-xl-10">
                    <div class="card rounded-3 text-black">
                        <div class="row g-0">
                            <div class="col-lg-6">
                                <div class="card-body p-md-5 mx-md-4">
                                    <div class="text-center">
                                        <img src="{{ asset('images/logo-no-background.png') }}" style="width: 185px;" alt="logo">
                                        <h4 class="mt-1 mb-5 pb-1">Register</h4>
                                    </div>

                                    {{ form_start(registrationForm) }}

                                    <div data-mdb-input-init class="form-outline mb-4">
                                        {{ form_widget(registrationForm.email) }}
                                        <label class="form-label" for="registrationForm_email">Email address</label>
                                    </div>

                                    <div data-mdb-input-init class="form-outline mb-4">
                                        {{ form_widget(registrationForm.plainPassword) }}
                                        <label class="form-label" for="registrationForm_plainPassword">Password</label>
                                    </div>

                                    <button type="submit" class="btn btn-primary btn-block fa-lg gradient-custom-2 mb-3">Register</button>

                                    {{ form_end(registrationForm) }}

                                    <div class="text-center pt-1 mb-5 pb-1">
                                        <a class="text-muted" href="/login">Already have an account? Log in</a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6 d-flex align-items-center gradient-custom-2">
                                <div class="text-white px-3 py-4 p-md-5 mx-md-4">
                                    <h4 class="mb-4">We are more than just a company</h4>
                                    <!-- Additional content or promotional message -->
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}